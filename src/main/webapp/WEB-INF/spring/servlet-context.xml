<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--  이 xml 파일을 통해 Front Controller에 적용할 설정을 추가  -->

    <!-- InternalResourceViewResolver: 컨트롤러에서 요청 처리 결과로 반환할 뷰에 관해, 지정한 뷰 템플릿을 미리 적용 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- InternalResourceViewResolver는 컨트롤러의 처리 결과에 해당하는 뷰로 경로명이 /WEB-INF/views의 하위에 위치한 jsp 파일을 찾아 반환 -->
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--  controller 패키지 내부의 컨트롤러 클래스들을 모두 스캔하여 빈으로 등록  -->
    <context:component-scan base-package="com.ssg.todoservice.controller"/>
    <!--  config 패키지 내부의 스프링 빈 설정 클래스에서 빈으로 설정한 객체를 찾아서 모두 등록  -->
    <context:component-scan base-package="com.ssg.todoservice.config"/>

    <!--  Spring 웹 MVC에서 어노테이션 활성화  -->
    <mvc:annotation-driven conversion-service="conversionService"/>
    <!--  resources 폴더의 하위 파일들을 모두 매핑 대상으로 지정 -->
    <!--  파일 경로: 절대 경로 사용  -->
    <!--  뷰 템플릿 경로: classpath:를 사용한 상대경로 (classpath: -> 프로젝트 폴더의 resources 폴더 경로에 해당) -->
    <mvc:resources mapping="/resources/**" location="classpath:/static/"/>

    <!--  Spring 웹 MVC에서 지정한 Formatter를 활용하여 파라미터 형변환을 수행   -->
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="formatters">
            <set>
                <!--  날짜 변환을 수행할 Formatter를 스프링 빈으로 등록  -->
                <bean class="com.ssg.todoservice.controller.formatter.LocalDateFormatter"/>
                <bean class="com.ssg.todoservice.controller.formatter.CheckboxFormatter"/>
            </set>
        </property>
    </bean>
</beans>