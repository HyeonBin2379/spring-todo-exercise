<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--  WAS 구동 시 생성할 ApplicationContext 객체에 적용할 설정을 지정 -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring/root-context.xml</param-value>
    </context-param>

    <!--  리스너: WAS 서버가 구동될 때 특정 작업을 수행 -->
    <!--  ContextLoaderListener: 스프링 ApplicationContext를 생성 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!--  스프링 웹 컨테이너에 등록할 서블릿을 지정  -->
    <servlet>
        <!-- DispatcherServlet을 스프링 빈으로 등록: 서블릿의 처리 결과를 받아 뷰를 반환할 Front-Controller-->
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

        <!--  초기 세팅 지정1: ApplicationContext에 설정 적용  -->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/spring/servlet-context.xml</param-value>
        </init-param>

        <!--  초기 세팅 지정2: 예외 처리 핸들러를 찾을 수 없으면 예외 throw -->
        <init-param>
            <param-name>throwExceptionIfNoHandlerFound</param-name>
            <param-value>true</param-value>
        </init-param>

        <!--  웹 애플리케이션 구동 시 서블릿 등록 우선순위 지정 -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--  appServlet에서 처리할 요청을 지정: Root 경로에 해당하는 요청을 처리 -> 초기 실행 화면 출력 -->
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--  UTF-8 인코딩 적용(한글 깨짐 방지) 필터  -->
    <filter>
        <!--  사용할 필터, 인코딩 타입, 인코딩 적용 방식 지정 -->
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <!--  한글 깨짐 방지 필터를 적용할 범위 지정 -> 모든 요청에 대해 적용  -->
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>